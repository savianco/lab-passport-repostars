<div class="col-xs-10 col-xs-offset-1">
  <header id="header">
    <img src="<%= user.avatar %>" class="img img-responsive img-circle"/>
    Hi <%= user.name%>!
    <a href="/logout" class="btn btn-small btn-danger">Logout</a>
    <a class="btn btn-default btn-small" data-toggle="modal" data-target="#myModal">
      Profile
    </a>
  </header>

  <hr>

  <section id="repositories">
    <h2>Public Repositories</h2>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th class="text-center">Followers</th>
          <th class="text-center">#ID</th>
          <th>Name</th>
          <th>Decription</th>
        </tr>
      </thead>
      <tbody>
        <% publishedRepos.forEach(function(repo){ %>
          <tr>
            <td class="text-center"> <span class="badge"><%= repo.stargazers_count %></span></td>
            <td class="text-center"> <%= repo.id %> </td>
            <td> <a href="<%= repo.html_url%>"><%= repo.name %></a> </td>
            <td> <%= repo.description %> </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </section>

  <section id="repositories">
    <h2>My Repositories</h2>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th class="text-center">Followers</th>
          <th class="text-center">#ID</th>
          <th>Name</th>
          <th>Decription</th>
        </tr>
      </thead>
      <tbody>
        <% privateRepos.forEach(function(repo){ %>
          <tr>
            <td class="text-center"> <span class="badge"><%= repo.stargazers_count %></span></td>
            <td class="text-center"> <%= repo.id %> </td>
            <td> <a href="<%= repo.html_url%>"><%= repo.name %></a> </td>
            <td> <%= repo.description %> </td>
            <td>
              <a href="#" class="publish btn btn-sm btn-success"
                 data-id    = "<%= repo.id %>"
                 data-name  = "<%= repo.name %>"
                 data-desc  = "<%= repo.description %>"
                 data-url   = "<%= repo.html_url %>"
                 data-stars = "<%= repo.stargazers_count %>">
                     Publish
              </a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </section>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Your Profile Information</h4>
      </div>

      <div class="modal-body">
        <table class="table table-condensed" id="profile-table">
          <tr><td><strong>token</strong> </td>    <td> <%= user.token %></td></tr>
          <tr><td><strong>githubId</strong> </td> <td> <%= user.githubId %></td></tr>
          <tr><td><strong>name</strong> </td>     <td> <%= user.name %></td></tr>
          <tr><td><strong>username</strong> </td> <td> <%= user.username %></td></tr>
          <tr><td><strong>email</strong> </td>    <td> <%= user.email %></td></tr>
          <tr><td><strong>avatar</strong> </td>   <td> <%= user.avatar %></td></tr>
        </table>
      </div>
    </div>
  </div>
</div>
